{
  "name": "ngx-diff",
  "version": "0.1.0",
  "description": "Angular2+ module for comparing text.",
  "main": "ngx-diff.bundle.js",
  "module": "ngx-diff.module.js",
  "jsnext:main": "ngx-diff.module.js",
  "types": "ngx-diff.module.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/ngx-diff.module.js > dist/ngx-diff.bundle.js && cp package.json dist && ngc && cp README.md dist && cp LICENSE.md dist",
    "test": "karma start --single-run",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "release": "standard-version",
    "npmpublish": "cd dist && npm publish",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rars/ngx-diff"
  },
  "keywords": [
    "Angular2",
    "ng2",
    "diff"
  ],
  "author": "Richard Russell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rars/ngx-diff/issues"
  },
  "homepage": "https://github.com/rars/ngx-diff#readme",
  "peerDependencies": {
    "@angular/core": ">=2.0.0",
    "diff-match-patch-ts": ">=0.2.0"
  },
  "devDependencies": {
    "@angular/common": "^2.0.0",
    "@angular/compiler": "^2.0.0",
    "@angular/compiler-cli": "^2.0.0",
    "@angular/core": "^2.0.0",
    "@angular/platform-browser": "^2.0.0",
    "@angular/platform-browser-dynamic": "^2.0.0",
    "@angular/platform-server": "^2.0.0",
    "@commitlint/cli": "^5.2.8",
    "@commitlint/config-conventional": "^5.2.3",
    "@types/jasmine": "^2.5.53",
    "@types/jsdom": "^11.0.1",
    "@types/node": "^8.0.13",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^2.1.0",
    "diff-match-patch-ts": "^0.2.0",
    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.4",
    "jsdom": "^9.12.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "rollup": "^0.45.1",
    "rxjs": "^5.4.2",
    "standard-version": "^4.2.0",
    "ts-loader": "^2.2.2",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "webpack": "^3.2.0",
    "zone.js": "^0.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
